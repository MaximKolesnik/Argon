#!/bin/bash
script_dir="$(dirname $(readlink -f $0))"
if [ -d "$script_dir/../sources/" ] 
then
    echo "Directory /path/to/dir exists." 
else
    echo "Error: Directory /path/to/dir does not exists."
fi
if [ -f "$script_dir/../sources/CMakeLists.txt" ] 
then
    echo "File exists." 
else
    echo "File does not exists."
fi
mkdir -p $script_dir/solutions
cmake $script_dir/../sources/CMakeLists.txt -B"solutions" -G"Unix Makefiles" -DARGON_TARGET=engine
make -C"solutions"

